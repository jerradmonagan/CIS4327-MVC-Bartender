@model IEnumerable<Bartender.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Drink_Img_Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drink_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drink_Name)
        </th>
        <th>
            Drink Picture
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Drink_Img_Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drink_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drink_Name)
        </td>
        <td>
            <img src="@Url.Content(@item.Drink_Img_Link)" alt="@item.Drink_Name" height="100" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Drink_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Drink_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Drink_Id })
        </td>
    </tr>
}

</table>
